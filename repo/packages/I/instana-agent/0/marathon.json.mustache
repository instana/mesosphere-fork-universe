{
  "id": "{{instana-agent.app_id}}",
  "cpus": {{instana-agent.cpus}},
  "mem": {{instana-agent.ram}},
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "registry-public.instana.io/instana/agent:latest",
      "parameters": [
        {"key": "name", "value": "instana-agent"},
        {"key": "env", "value": "INSTANA_TAGS={{instana-agent.tag_list}}"},
        {"key": "env", "value": "INSTANA_KEY={{instana-agent.agent_key}}"},
        {"key": "env", "value": "INSTANA_HOST={{instana-agent.agent_endpoint}}"},
        {"key": "env", "value": "INSTANA_PORT={{instana-agent.agent_endpoint_port}}"}
      ],
      "network": "HOST",
      "volumes": [
        {
          "containerPath": "/var/run/docker.sock",
          "hostPath": "/var/run/docker.sock",
          "mode": "RW"
        },
      ]
    },
  },
  "instances": {{instana-agent.instances}},
  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/version",
      "port": "42699",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ],
  "upgradeStrategy":{
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 0
  },
  "labels": {
    "DCOS_PACKAGE_FRAMEWORK_NAME": "{{instana-agent.framework_name}}",
    "DCOS_SERVICE_NAME": "{{instana-agent.framework_name}}",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_PORT_INDEX": "0"
  }
}
